
{% extends "admin/admin.html.twig" %}

{% block title %}Gestion des actualités{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="container">

        <!-- creer actualité-->
        <a class="btn btn-outline-primary" href={{ path ('create_actu')}}>
            <i class="fas fa-plus"></i>Créer un actualité
        </a>
        <!-- /creer actualité-->

        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">Titre</th>
                <th scope="col">Sous-titre</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
                </tr>
            </thead>
            <tbody id="affiche-admins">
                {% for actu in actus %}
                    <tr>
                        <th scope="row">
                            {{actu.titre}}
                        </th>
                        <th>
                            {{actu.sousTitre}}
                        </th>
                        <td>
                            <a href={{ path ('edit_actu', {id: actu.id})}} type="button" class="btn btn-warning"><i class="fas fa-cog"></i></a>
                        </td>
                        <td>
                            <!-- Boutton modal delete-->
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDelete{{actu.id}}"><i class="fas fa-trash-alt"></i></button>
                            <!-- /Boutton modal delete-->
                            <!-- modal delete-->
                            <div id="modal-delete{{actu.id}}">
                                <div class="modal fade" id="confirmDelete{{actu.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    <strong>Voulez vous vraiment supprimer l'actualité' ?</strong>
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                    <form id="delete{{actu.id}}" method="post" action={{ path ('delete_actu', {id: actu.id})}}>
                                                        <div class="modal-body">
                                                            <h5>Titre de l'actualité : {{actu.titre}}</h5>
                                                            <br>
                                                            <h5>Sous-titre de l'actualité : {{actu.sousTitre}}</h5>
                                                            <br>
                                                            <h5><strong>Cette action est irréversible</strong></h5>
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <input type="hidden" name="_token" value={{ csrf_token ('delete')}}>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-danger">Oui, Supprimer</button>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non, conserver</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /modal delete-->
                        </td> 
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(actus) }}
        </div>
    </div>
    

{% endblock %}

{% block javascripts %}

{% endblock %}
